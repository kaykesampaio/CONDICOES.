 # Exercicio 4   
    # calcule o preço da passagem cobrando R$0,50 por km para viagens de até 200km e R$0,45 para viagens mais longas
        # forma condição composta
from time import sleep

print('~~\\\~~'*20)

distancia = float(input('\nQual a distância da viagem? '))

sleep(2)

print('você começará sua viagem de {}km em alguns instantes\n'.format(distancia))

print('CALCULANDO O PREÇO...\n')

sleep(2)

if distancia <= 200: # condição composta contem If e Else
    preço = distancia * 0.50
else:
    preço = distancia * 0.45
print('O preço da passagem será R${:.2f}\n'.format(preço))
print('~~\\\~~'*20)